<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_article"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/iv_article"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_article"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_article"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_article"
        app:layout_constraintTop_toTopOf="@+id/iv_article"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas rutrum, arcu nec efficitur posuere, metus erat lobortis risus, tristique pretium augue neque ac felis. Pellentesque a vestibulum lorem. Praesent ullamcorper tristique dolor a pharetra. Proin ac viverra risus, vitae placerat tortor. Sed egestas justo ut diam ultricies fermentum. Nulla pellentesque." />

    <TextView
        android:id="@+id/tv_date_article"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_article"
        app:layout_constraintStart_toStartOf="@+id/iv_article"
        app:layout_constraintTop_toBottomOf="@+id/iv_article"
        tools:text="24/01/94" />

</androidx.constraintlayout.widget.ConstraintLayout>